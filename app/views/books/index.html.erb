<div class="container">
  <h3>Create your Book here</h3>
  
  <%= render 'partials/bform' %>

  <table class="table ">
    <tr>
        <th>Author Name</th>
        <th>Books</th>
    </tr>
    <%@books.each do |book|%>
      <tr>
          <td><%= book.author_name %></td>
          <td><%= book.name %></td>
      </tr>
    <%end%>
  </table>
        
</div>

